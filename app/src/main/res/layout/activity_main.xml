<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/text_view_malengo_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:text="@string/malengo_app"
            android:textColor="#34495E"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_view_methali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_malengo_app"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:text="@string/haba_na_haba_hujaza_kibaba"
            android:textColor="#1C2833" />

        <TextView
            android:id="@+id/text_view_methali_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_methali"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:text="@string/step_by_step_fills_the_measure"
            android:textColor="#1C2833" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_malengo_yangu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_methali_english"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/renata_adrienn_ksxr8trrmve_unsplash" />

                <TextView
                    android:id="@+id/text_view_starters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/malengo"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_mahali"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_malengo_yangu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/malengo_app_pic_2" />

                <TextView
                    android:id="@+id/text_view_mahali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/mahali"
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>